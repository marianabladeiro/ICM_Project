<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- Home -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.icm_project.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <!-- Timer -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.icm_project.ui.timer.TimerFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_timer" />

    <!-- Something else - to decide -->
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.icm_project.ui.calendar.CalendarFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.example.icm_project.ui.notes.NotesFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes" />


</navigation>